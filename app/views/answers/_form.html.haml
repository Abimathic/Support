= form_for([@question, @answer]) do |f|
  - if @answer.errors.any?
    #error_explanation
      %h2
        = pluralize(@answer.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @answer.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :Answers
    %br/
    = f.text_area :answer
  .actions
    = f.submit
