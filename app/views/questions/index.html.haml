- @questions.each do |question|
  .question_list
    = link_to question.quesbox, question
    - if current_user == question.user
      = link_to 'Edit', edit_question_path(question), :class => "btn-primary"
      = link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn-primary"
%br/
= link_to 'Create Question', new_question_path
